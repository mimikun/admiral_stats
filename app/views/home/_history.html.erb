<div class="container">
  <div class="table-responsive">
    <table id="table-history" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th class="text-left col-xl-2 col-lg-2 col-md-2 col-sm-3 col-xs-4">日時</th>
        <th class="hidden">インデックス（ソート用）</th>
        <th class="text-left col-xl-10 col-lg-10 col-md-10 col-sm-9 col-xs-8">活動記録</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th class="text-left">日時</th>
        <th class="hidden">インデックス（ソート用）</th>
        <th class="text-left">活動記録</th>
      </tr>
      </tfoot>
      <tbody>
      <% histories.each do |history| %>
          <tr class="history">
            <td class="text-left"><%= history[:exported_at] %></td>
            <td class="hidden"><%= history[:index] %></td>
            <td class="text-left <%== history[:class] if history[:class] %>"><%= history[:description] %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script type="application/javascript">
  $(document).ready(function() {
    $('#table-history').DataTable({
      "paging": true,
      "autoWidth": false,
      "sorting": [ 0, "desc" ],
      "aoColumnDefs": [
        <!-- インデックスでソートするための設定 -->
        { "iDataSort": 1, "aTargets": [ 0 ] },
      ],
      "language": {
        "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Japanese.json"
      }
    });
  } );
</script>
