<div class="page-header">
  <h2><%= title %></h2>
  （開催期間：<%= @event.started_at.strftime("%Y年%m月%d日 %H:%M") %> 〜 <%= @event.ended_at.strftime("%Y年%m月%d日 %H:%M") %>）
</div>

<div class="container">
  <div class="table-responsive">
    <table id="table-event-progress-status" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>難易度</th>
        <th>突破回数</th>
        <th>現在の進捗</th>
      </tr>
      </thead>
      <tbody>
      <% @event.levels.each do |level| %>
          <%
            statuses = @statuses.select{|s| s.level == level }
            stages = @event.stages.select{|s| s.level == level }
          %>
          <tr>
            <td><%= difficulty_level_to_text(level) %></td>
            <td><%= statuses.first.cleared_loop_counts %> 回</td>
            <td><%= event_progress_status_to_text(stages, statuses.first) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% @event.levels.each do |level| %>
    <%
      statuses = @statuses.select{|s| s.level == level }
      stages = @event.stages.select{|s| s.level == level }
    %>
    <div class="container">
      <div class="table-responsive">
        <table id="table-event-progress-status" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>日時</th>
            <th>現在の進捗</th>
          </tr>
          </thead>
          <tbody>
          <% statuses.each do |status| %>
              <tr>
                <td><%= status.exported_at %></td>
                <td><%= event_progress_status_to_text(stages, status) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
<% end %>

