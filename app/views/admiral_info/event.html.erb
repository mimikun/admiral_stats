<div class="page-header">
  <h2><%= title %></h2>
  （開催期間：<%= @event.started_at.strftime("%Y年%m月%d日 %H:%M") %> 〜 <%= @event.ended_at.strftime("%Y年%m月%d日 %H:%M") %>）
</div>

<div class="container">
  <div class="table-responsive">
    <table id="table-event-progress-status" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>難易度</th>
        <th>突破回数</th>
        <th>現在の進捗</th>
      </tr>
      </thead>
      <tbody>
      <% @levels.each do |level| %>
          <tr>
            <td><%= difficulty_level_to_text(level) %></td>
            <td><%= @cleared_loop_counts[level] %> 回</td>
            <td>
              <%= @current_loop_counts[level] %> 周目
              <% if @cleared_stage_no[level] == 0 %>
                  E-1 未攻略
              <% else %>
                  E-<%= @cleared_stage_no[level] %> 攻略済
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
